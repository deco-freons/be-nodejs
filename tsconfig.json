{
  "compilerOptions": {
    "lib": [
       "es2021",
    ],
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build", 
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "downlevelIteration": true,
    "sourceMap": true                      
 }
}
